@using Microsoft.AspNetCore.Identity

@inject SignInManager<FootballLeague.Common.Models.User> SignInManager
@inject UserManager<FootballLeague.Common.Models.User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-action="Logout" asp-controller="Account" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#">Hello Admin!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-action="Register" asp-controller="Account">Register</a></li>
        <li><a asp-area="" asp-action="Login" asp-controller="Account">Login</a></li>
    </ul>
}
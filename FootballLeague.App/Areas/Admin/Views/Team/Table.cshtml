@model IList<FootballLeague.Common.ViewModels.TeamViewModel>
@{
    var isAdmin = User.IsInRole("Admin");
    Layout = isAdmin ? "../Shared/_Layout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <section>
            <h2 style="text-align:center">Teams Table</h2>
            <hr />
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th></th>
                        <th>Team</th>
                        <th>Wins</th>
                        <th>Draws</th>
                        <th>Losses</th>
                        <th>Goals Scored</th>
                        <th>Goals Received</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.DisplayFor(x => x)
                </tbody>
            </table>
        </section>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('table > tbody')
                .find('tr')
                .each(function (index, element) {
                    $(element).find('td')[0].textContent = ++index;
                });
        });
    </script>
}